{
    # Global options
    email admin@bemypcp.com
}

# Force HTTPS redirect for all HTTP traffic
http://bemypcp.com {
    redir https://bemypcp.com{uri} permanent
}

http://www.bemypcp.com {
    redir https://bemypcp.com{uri} permanent
}

# Redirect www HTTPS to non-www
https://www.bemypcp.com {
    redir https://bemypcp.com{uri} permanent
}

# Main HTTPS site
https://bemypcp.com {
    # Security headers
    header {
        # HSTS - Force HTTPS for 1 year
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        
        # XSS protection
        X-XSS-Protection "1; mode=block"
        
        # Prevent clickjacking
        X-Frame-Options "DENY"
        
        # Content Security Policy - allow Google Fonts and blob images
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' blob: data: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' blob: https://bemypcp.com; frame-ancestors 'none';"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Permissions policy
        Permissions-Policy "geolocation=(), microphone=(), camera=(self)"
        
        # Remove server header
        -Server
    }

    # API reverse proxy
    handle /api/* {
        reverse_proxy api:3000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
        }
    }

    # Uploads (patient photos, documents, etc.) served by API
    handle /uploads/* {
        reverse_proxy api:3000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
        }
    }

    # Serve static frontend (SPA)
    handle {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Health check endpoint
    handle /health {
        respond 200
    }
}

# ================================================================
# Admin Portal Subdomain (Isolated SuperAdmin Access)
# ================================================================
http://admin.bemypcp.com {
    redir https://admin.bemypcp.com{uri} permanent
}

https://admin.bemypcp.com {
    # Security headers (stricter for admin)
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        X-Frame-Options "DENY"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' blob: data: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' blob: https://admin.bemypcp.com; frame-ancestors 'none';"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    # API reverse proxy (same backend, different origin for cookie isolation)
    handle /api/* {
        reverse_proxy api:3000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
            header_up X-Admin-Portal "true"
        }
    }

    # Serve static frontend (same SPA, admin routes)
    handle {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }

    log {
        output file /var/log/caddy/admin-access.log
        format json
    }

    handle /health {
        respond 200
    }
}
