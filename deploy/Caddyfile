{
    # Global options
    email admin@pagemdemr.com
}

# ================================================================
# Redirects
# ================================================================

# Redirect www.pagemdemr.com to root
http://www.pagemdemr.com, https://www.pagemdemr.com {
    redir https://pagemdemr.com{uri} permanent
}

# Force HTTPS for new domain
http://pagemdemr.com {
    redir https://pagemdemr.com{uri} permanent
}


# ================================================================
# Main Site (pagemdemr.com)
# ================================================================
https://pagemdemr.com {
    root * /usr/share/caddy

    # Performance: Enable compression
    encode zstd gzip

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        X-Frame-Options "DENY"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' blob: data: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' blob: https://pagemdemr.com https://api.fda.gov https://rxnav.nlm.nih.gov https://clinicaltables.nlm.nih.gov; frame-ancestors 'none';"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=(self)"
        -Server
    }

    # API reverse proxy
    handle /api/* {
        reverse_proxy api:3000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
        }
    }

    # Uploads
    handle /uploads/* {
        reverse_proxy api:3000 {
            header_up X-Real-IP {remote_host}
            header_up Host {host}
        }
    }

    # Serve index.html with NO CACHE to ensure updates are seen immediately
    handle /index.html {
        header Cache-Control "no-cache, no-store, must-revalidate"
        header Pragma "no-cache"
        header Expires "0"
        file_server
    }

    # Serve static frontend (SPA)
    handle {
        try_files {path} /index.html
        file_server
    }

    log {
        output file /var/log/caddy/access.log
        format json
    }

    handle /health {
        respond 200
    }
}

# ================================================================
# Admin Portal Redirection
# ================================================================

# Redirect admin.pagemdemr.com to main site path (or invalid if not needed)
http://admin.pagemdemr.com, https://admin.pagemdemr.com {
    redir https://pagemdemr.com/platform-admin/login permanent
}
