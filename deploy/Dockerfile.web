# syntax=docker/dockerfile:1.4
# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies with BuildKit cache mount (faster rebuilds)
RUN --mount=type=cache,target=/root/.npm \
    npm ci --prefer-offline --no-audit --silent

# Copy source code
COPY . ./

# Build with cache mount for node_modules/.cache
RUN --mount=type=cache,target=/app/node_modules/.cache \
    npm run build

# Production stage - serve with Caddy
FROM caddy:2-alpine

# Copy built files to Caddy's web root
COPY --from=builder /app/dist /usr/share/caddy

# Caddy will serve the files (configured in docker-compose)

