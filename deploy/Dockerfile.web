# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies (cache this layer - only rebuilds if package.json changes)
# Use npm install instead of npm ci for better compatibility
RUN npm install --prefer-offline --no-audit --silent || npm install --no-audit --silent

# Copy source code
COPY . ./

# Build production bundle with restricted memory to avoid server swapping
RUN NODE_OPTIONS="--max-old-space-size=768" npm run build

# Production stage - serve with Caddy
FROM caddy:2-alpine

# Copy built files to Caddy's web root
COPY --from=builder /app/dist /usr/share/caddy

# Caddy will serve the files (configured in docker-compose)

